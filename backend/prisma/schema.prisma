// db schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  isAdmin   Boolean   @default(false)
  username  String?   @unique
  email     String    @unique
  password  String?
  createdAt DateTime  @default(now())
  image     String?
  provider  String    @default("credentials")
  googleId  String?   @unique
  booking   Booking[]
}

model Booking {
  id        String        @id @default(cuid())
  userId    String
  date      DateTime // Stores the booking day (midnight UTC)
  startTime String    // NOW A STRING (e.g., "10:00")
  endTime   String    // NOW A STRING (e.g., "11:00")
  status    BookingStatus @default(PENDING)
  notes     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  RESCHEDULED
}